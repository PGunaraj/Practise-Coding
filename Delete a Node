"""
 Delete Node at a given position in a linked list
 Node is defined as
 
 class Node(object):
 
   def __init__(self, data=None, next_node=None):
       self.data = data
       self.next = next_node

 return back the head of the linked list in the below method. 
"""

def Delete(head, position):
    if head != None:
        if position == 0:
            head.data=None
            head=head.next
            return head
        else:
            realhead=head
            count=0
            while head!=None and count!=position:
                prev=head
                head=head.next
                count += 1
            head.data=None
            prev.next=head.next
            head=realhead
            return head
  
  
  
  
